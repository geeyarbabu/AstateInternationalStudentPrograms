<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="students.astateinternationalstudentprograms.MyFragment3"
    android:background="@drawable/images">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/degreeHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DEGREE"
                android:textColor="#110002"
                android:textSize="20sp" />

            <SearchView
                android:id="@+id/degreeSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D3D3D3"
                android:textColor="#110002"
                android:gravity="end">

                <EditText
                    android:id="@+id/degreeSearchText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="#110002"
                    android:inputType="text|textAutoComplete"
                    android:text="@string/degreeSearch" />
            </SearchView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:textColor="#110002"
                android:text="@string/frag3" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
